# clang compiler
CC = gcc

# options
CCOPT = -O2 -ftree-vectorize -fopt-info-optimized=opts.log
CCOPT = -g -Wall -Wextra -O0

# libraries
LIBS = -lm

# sources
TEST_SRC = test.c
UTIL_SRC = util.c
SPHERE_SRC = sphere.c

# objects
TEST_OBJ = test.o
UTIL_OBJ = util.o
SPHERE_OBJ = sphere.o
OBJECTS = $(TEST_OBJ) $(UTIL_OBJ) $(SPHERE_OBJ)

# binaries
TEST_BIN = test.bin

TESTS = $(TEST_BIN)
