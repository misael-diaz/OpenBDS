# modules directory
# modules include
MODULES_DIR = ../../../../modules/utils
MODULES_INC = -I$(MODULES_DIR)


# src
VECTOR_MODULE_SRC = Vector.for
VECTOR_UTILIT_SRC = submodules/Vector_utils.for
VECTOR_OBLIVI_SRC = submodules/Vector_type_oblivious_methods.for
VECTOR_MINT32_SRC = submodules/Vector_int32_t_methods.for
VECTOR_IINT32_SRC = submodules/Vector_int32_t_implementations.for
VECTOR_MINT64_SRC = submodules/Vector_int64_t_methods.for
VECTOR_IINT64_SRC = submodules/Vector_int64_t_implementations.for
VECTOR_METR64_SRC = submodules/Vector_real64_t_methods.for
VECTOR_IMPR64_SRC = submodules/Vector_real64_t_implementations.for
VECTOR_MVECTT_SRC = submodules/Vector_vector_t_methods.for
VECTOR_IVECTT_SRC = submodules/Vector_vector_t_implementations.for

# methods
VECTOR_ERASE_METHOD_SRC = submodules/Vector_int32_t_erase_methods.for

# objects
VECTOR_MODULE_OBJ = Vector.o
VECTOR_UTILIT_OBJ = submodules/Vector_utils.o
VECTOR_OBLIVI_OBJ = submodules/Vector_type_oblivious_methods.o
VECTOR_MINT32_OBJ = submodules/Vector_int32_t_methods.o
VECTOR_IINT32_OBJ = submodules/Vector_int32_t_implementations.o
VECTOR_MINT64_OBJ = submodules/Vector_int64_t_methods.o
VECTOR_IINT64_OBJ = submodules/Vector_int64_t_implementations.o
VECTOR_METR64_OBJ = submodules/Vector_real64_t_methods.o
VECTOR_IMPR64_OBJ = submodules/Vector_real64_t_implementations.o
VECTOR_MVECTT_OBJ = submodules/Vector_vector_t_methods.o
VECTOR_IVECTT_OBJ = submodules/Vector_vector_t_implementations.o

# method objects
VECTOR_ERASE_METHOD_OBJ = submodules/Vector_int32_t_erase_methods.o

VECTOR_SUBMOD_OBJ = $(VECTOR_UTILIT_OBJ) $(VECTOR_OBLIVI_OBJ)\
                    $(VECTOR_MINT32_OBJ) $(VECTOR_IINT32_OBJ)\
                    $(VECTOR_MINT64_OBJ) $(VECTOR_IINT64_OBJ)\
                    $(VECTOR_METR64_OBJ) $(VECTOR_IMPR64_OBJ)\
                    $(VECTOR_MVECTT_OBJ) $(VECTOR_IVECTT_OBJ)\
                    $(VECTOR_ERASE_METHOD_OBJ)
