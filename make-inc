# FORTRAN compilers
# Intel FORTRAN Compiler
FC = ifort
# GNU FORTRAN Compiler
FC = gfortran-11
FC = gfortran-10
FC = gfortran-9
FC = gfortran

# clang compilers
# Intel C Compiler
CC = icc
# Linux LLVM C Compiler (clang) Options
CC = clang-12
# GNU C Compiler
CC = gcc-11
CC = gcc-10
CC = gcc-9
CC = gcc

# MAC OS X Intel FORTRAN Compiler Options
FCOPT = -cpp -fixed -warn all -g -O0
# Linux GNU FORTRAN Compiler Options
FCOPT = -O2 -mavx512vnni -ftree-vectorize -fopt-info-optimized=opts.log -cpp -ffixed-form
FCOPT = -O2 -mavx -ftree-vectorize -fopt-info-optimized=opts.log -cpp -ffixed-form
FCOPT = -g -Wall -Wextra -Waliasing -Wsurprising -Warray-bounds -Warray-temporaries\
	-Wcharacter-truncation -Wconversion-extra -Wimplicit-interface\
	-Wimplicit-procedure -Wuse-without-only -Wrealloc-lhs -Wrealloc-lhs-all\
	-fcheck=all -O0 -cpp -ffixed-form

# clang options
# MAC OS X Intel C Compiler Options
CCOPT = -g -Wall -O0 -std=c18 -fPIC\
        -I/opt/intel/oneapi/compiler/2021.1.1/mac/compiler/include/icc\
        -I/Library/Developer/CommandLineTools/SDKs/MacOSX10.15.sdk/usr/include\
        -I/Library/Developer/CommandLineTools/SDKs/MacOSX10.15.sdk/usr/include/machine
# MAC OS X GNU C Compiler Options
CCOPT = -std=gnu2x -g -Wall -Wextra -O0 -fPIC\
        -I/Library/Developer/CommandLineTools/SDKs/MacOSX10.15.sdk/usr/include\
        -I/Library/Developer/CommandLineTools/SDKs/MacOSX10.15.sdk/usr/include/machine
# Linux LLVM C Compiler (clang) Options
CCOPT = -std=gnu17 -g -Wall -O0 -fPIC
# Linux GNU C Compiler Options
CCOPT = -fPIC -std=gnu2x -O2 -mavx512vnni -ftree-vectorize -fopt-info-optimized=opts.log
CCOPT = -fPIC -std=gnu2x -O2 -mavx2 -ftree-vectorize -fopt-info-optimized=opts.log
CCOPT = -fPIC -std=gnu2x -g -Wall -Wextra -O0

# libraries
# if the glibc version is older than 2.17, you will need these libraries
LIBS = -lm -lrt
# otherwise just link against C's math library
LIBS = -lm
